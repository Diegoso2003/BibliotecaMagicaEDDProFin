<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.VBox?>

<BorderPane styleClass="principal" xmlns="http://javafx.com/javafx/25" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.mycompany.bibliotecamagica.controllers.RegistroTrasladoController">
   <center>
      <TableView fx:id="registros" prefHeight="400.0" prefWidth="600.0" stylesheets="@estilos/registro_traslado.css" tableMenuButtonVisible="false" BorderPane.alignment="CENTER">
        <columns>
        <TableColumn fx:id="numero" editable="false" prefWidth="55" reorderable="false" sortable="false" styleClass="numero-column" text="#" />
          <TableColumn fx:id="isbn" editable="false" prefWidth="75.0" reorderable="false" sortable="false" text="ISBN libro" />
          <TableColumn fx:id="ruta" editable="false" prefWidth="75.0" reorderable="false" sortable="false" text="Ruta" />
            <TableColumn fx:id="tiempo" editable="false" prefWidth="75.0" reorderable="false" sortable="false" text="Tiempo" />
            <TableColumn fx:id="costo" editable="false" prefWidth="75.0" reorderable="false" sortable="false" text="Costo" />
            <TableColumn fx:id="prioridad" editable="false" prefWidth="75.0" reorderable="false" sortable="false" text="Prioridad" />
        </columns>
         <columnResizePolicy>
            <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
         </columnResizePolicy>
      </TableView>
   </center>
   <padding>
      <Insets bottom="15.0" left="15.0" right="15.0" top="15.0" />
   </padding>
   <bottom>
      <VBox alignment="CENTER" BorderPane.alignment="CENTER">
         <children>
            <Button mnemonicParsing="false" onAction="#recargar" styleClass="btn-primary" text="Recargar" />
         </children>
         <padding>
            <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
         </padding>
      </VBox>
   </bottom>
</BorderPane>
