<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Spinner?>
<?import javafx.scene.layout.VBox?>

<VBox spacing="15.0" styleClass="principal" xmlns="http://javafx.com/javafx/25" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.mycompany.bibliotecamagica.controllers.FormConexionController">
   <children>
      <Label styleClass="titulo" text="Agregar conexion" />
      <Label text="Biblioteca de origen" />
      <ComboBox fx:id="bibliotecaOrigen" prefWidth="500.0" promptText="seleccione una biblioteca" />
      <Label text="Biblioteca destino" />
      <ComboBox fx:id="bibliotecaDestino" prefWidth="500.0" promptText="seleccione una biblioteca" />
      <Label text="Tiempo" />
      <Spinner fx:id="tiempo" editable="true" />
      <Label text="Costo" />
      <Spinner fx:id="costo" editable="true" />
      <Button mnemonicParsing="false" onAction="#agregarConexion" styleClass="btn-primary" text="Agregar" />
   </children>
   <padding>
      <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
   </padding>
</VBox>
