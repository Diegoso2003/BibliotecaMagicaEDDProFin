<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<BorderPane prefHeight="699.0" prefWidth="720.0" styleClass="principal" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.mycompany.bibliotecamagica.controllers.BusquedaController">
   <bottom>
      <HBox alignment="CENTER" prefHeight="100.0" prefWidth="200.0" spacing="15.0" BorderPane.alignment="CENTER">
         <padding>
            <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
         </padding>
         <children>
            <VBox alignment="CENTER" spacing="15.0">
               <children>
                  <Label text="Escoja el campo por el que se ordenara" />
                  <ComboBox fx:id="ordenCampo" onAction="#verificarSeleccion" disable="true" prefWidth="300.0" />
               </children>
            </VBox>
            <VBox alignment="CENTER" spacing="15.0">
               <children>
                  <Label text="Seleccione el algoritmo para ordenar" />
                  <ComboBox fx:id="algoritmoOrden" onAction="#verificarSeleccion"  disable="true" prefWidth="300.0" />
               </children>
            </VBox>
            <VBox alignment="CENTER" prefHeight="200.0" prefWidth="100.0">
               <children>
                  <Button fx:id="botonOrdenar" onAction="#realizarOrdenacion"  disable="true" mnemonicParsing="false" styleClass="btn-primary" text="Ordenar" />
               </children>
            </VBox>
         </children>
      </HBox>
   </bottom>
   <center>
      <TableView fx:id="tablaResultados" prefHeight="221.0" prefWidth="654.0" stylesheets="@estilos/registro_traslado.css" BorderPane.alignment="CENTER">
        <columns>
          <TableColumn fx:id="numero" editable="false" maxWidth="55.0" minWidth="55.0" prefWidth="55.0" sortable="false" text="#" />
          <TableColumn fx:id="isbn" editable="false" prefWidth="75.0" sortable="false" text="Isbn" />
            <TableColumn fx:id="titulo" editable="false" prefWidth="75.0" sortable="false" text="titulo" />
            <TableColumn fx:id="autor" editable="false" prefWidth="75.0" sortable="false" text="autor" />
            <TableColumn fx:id="genero" editable="false" prefWidth="75.0" sortable="false" text="genero" />
            <TableColumn fx:id="año" editable="false" maxWidth="75.0" minWidth="75.0" prefWidth="75.0" sortable="false" text="año" />
            <TableColumn fx:id="estado" editable="false" maxWidth="100.0" minWidth="100.0" prefWidth="100.0" sortable="false" text="estado" />
            <TableColumn fx:id="copias" maxWidth="65.0" minWidth="65.0" prefWidth="65.0" text="Copias" />
        </columns>
         <columnResizePolicy>
            <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
         </columnResizePolicy>
      </TableView>
   </center>
   <top>
      <VBox alignment="CENTER" prefHeight="284.0" prefWidth="720.0" spacing="15.0" BorderPane.alignment="CENTER">
         <children>
            <Label text="Biblioteca" />
            <ComboBox fx:id="biblioSeleccionada" onAction="#verificarEntrada" prefWidth="500.0" promptText="seleccione la biblioteca donde se buscara" />
            <Label text="Campo por el que se buscara" />
            <ComboBox fx:id="buscadorSeleccionado" onAction="#verificarEntrada" prefWidth="500.0" promptText="Escoja un campo para buscar" />
            <Label text="Entrada" />
            <TextField fx:id="campo" disable="true" promptText="Ingrese el valor del campo a buscar" />
            <Button fx:id="botonBusqueda" disable="true" mnemonicParsing="false" onAction="#realizarBusqueda" styleClass="btn-primary" text="Realizar busqueda" />
         </children>
         <padding>
            <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
         </padding>
      </VBox>
   </top>
   <padding>
      <Insets left="15.0" right="15.0" />
   </padding>
</BorderPane>
