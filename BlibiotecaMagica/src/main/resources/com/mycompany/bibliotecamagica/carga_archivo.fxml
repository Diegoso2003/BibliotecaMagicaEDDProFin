<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>
<?import javafx.scene.Group?>

<VBox alignment="TOP_CENTER" prefHeight="273.0" prefWidth="485.0" spacing="50.0" styleClass="principal" stylesheets="@estilos/carga_archivo.css" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.mycompany.bibliotecamagica.controllers.CargaArchivoController">
    <children>
        <Label prefHeight="31.0" prefWidth="178.0" styleClass="subtitulo" text="Cargar archivo" textFill="WHITE" />
        <HBox alignment="CENTER" prefHeight="64.0" prefWidth="445.0" spacing="100.0">
            <children>
                <VBox alignment="CENTER" prefHeight="180.0" prefWidth="400.0" spacing="20.0">
                    <children>
                        <Label text="Archivo de bibliotecas" textFill="WHITE">
                            <font>
                                <Font size="14.0" />
                            </font>
                        </Label>
                        <Button mnemonicParsing="false" onAction="#cargarArchivoBiblioteca" styleClass="fab-button">
                            <graphic>
                                <Group fx:id="bibliotecas" scaleX="4" scaleY="4" />
                            </graphic>
                        </Button>
                    </children>
                    <HBox fx:id="archivoBibliotecas" alignment="CENTER" prefHeight="200.0" prefWidth="400.0" spacing="0.0" />
                </VBox>
                <VBox alignment="CENTER" prefHeight="180.0" prefWidth="400.0" spacing="20.0">
                    <children>
                        <Label text="Archivo de conexiones" textFill="WHITE">
                            <font>
                                <Font size="14.0" />
                            </font>
                        </Label>
                        <Button mnemonicParsing="false" onAction="#cargarArchivoConexion" styleClass="fab-button">
                            <graphic>
                                <Group fx:id="conexiones" scaleX="4" scaleY="4" />
                            </graphic>
                        </Button>
                    </children>
                    <HBox fx:id="archivoConexiones" alignment="CENTER" prefHeight="200.0" prefWidth="400.0" spacing="0.0" />
                </VBox>
                <VBox alignment="CENTER" prefHeight="180.0" prefWidth="400.0" spacing="20.0">
                    <children>
                        <Label text="Archivo de libros" textFill="WHITE">
                            <font>
                                <Font size="14.0" />
                            </font>
                        </Label>
                        <Button mnemonicParsing="false" onAction="#cargarArchivoLibro" styleClass="fab-button">
                            <graphic>
                                <Group fx:id="libros" scaleX="4" scaleY="4" />
                            </graphic>
                        </Button>
                    </children>
                    <HBox fx:id="archivoLibros" alignment="CENTER" prefHeight="200.0" prefWidth="400.0" spacing="0.0" />
                </VBox>
            </children>
        </HBox>
        <Button mnemonicParsing="false" onAction="#analizarArchivos" styleClass="btn-primary" text="Comenzar Analisis" />
        <Label prefHeight="31.0" prefWidth="320.0" styleClass="subtitulo" text="Errores encontrados en los archivos" textFill="WHITE" />
        <TextArea prefHeight="1000.0" prefWidth="445.0" editable="false" styleClass="log-area" />
    </children>
    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
    </padding>
</VBox>
