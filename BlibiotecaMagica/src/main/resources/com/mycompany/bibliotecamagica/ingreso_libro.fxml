<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<ScrollPane fitToHeight="true" fitToWidth="true" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.mycompany.bibliotecamagica.controllers.IngresoLibroController">
   <content>
      <VBox spacing="15.0" styleClass="principal">
         <children>
            <HBox alignment="CENTER" styleClass="titulo">
               <children>
                  <Label text="Form para ingresar libro" />
               </children>
               <padding>
                  <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
               </padding>
            </HBox>
            <Label styleClass="subtitulo" text="biblioteca de origen" />
            <ComboBox fx:id="biblioOrigen" prefWidth="500.0" promptText="biblioteca donde ingresara primero" />
            <Label styleClass="subtitulo" text="biblioteca de destino" />
            <ComboBox fx:id="biblioDestino" prefWidth="500.0" promptText="biblioteca donde se quedara el libro" />
            <Label styleClass="subtitulo" text="Prioridad" />
            <ComboBox fx:id="prioridad" prefWidth="500.0" promptText="prioridad para buscar la ruta" />
            <Label styleClass="subtitulo" text="Estado" />
            <ComboBox fx:id="estado" prefWidth="500.0" promptText="Estado del libro" />
            <Label styleClass="subtitulo" text="ISBN" />
            <TextField fx:id="isbn" promptText="isbn del libro" />
            <Label styleClass="subtitulo" text="Titulo" />
            <TextField fx:id="titulo" promptText="titulo del libro" />
            <Label styleClass="subtitulo" text="Genero" />
            <TextField fx:id="genero" promptText="genero del libro" />
            <Label styleClass="subtitulo" text="Año" />
            <TextField fx:id="año" promptText="año de publicacion" />
            <Label styleClass="subtitulo" text="Autor" />
            <TextField fx:id="autor" promptText="autor del libro" />
            <VBox alignment="CENTER">
               <children>
                  <Button mnemonicParsing="false" onAction="#ingresarLibro" styleClass="btn-primary" text="Agregar" />
               </children>
               <padding>
                  <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
               </padding>
            </VBox>
         </children>
         <padding>
            <Insets bottom="15.0" left="15.0" right="15.0" top="15.0" />
         </padding>
      </VBox>
   </content>
</ScrollPane>
